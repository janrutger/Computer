    center_x center_y 66 15 TURTLE_line TURTLE_flip
}

# Draws a fan pattern filling a 60x60 square.
DEF draw_fan_pattern {
    #DBmode IO 2 MODE

    VALUE color 1
    VALUE y 10
    VALUE x 20

    #0 0 TURTLE_goto

    :alternate_loop
        x 60 == IF GOTO end_loop END

        # Set the color for the current frame's lines
        color TURTLE_color

        # Draw horizontal line to the bottom edge
        20 10 x 49 TURTLE_line

        # Draw vertical line to the right edge
        20 10 59 y TURTLE_line

        # Flip buffer to show the new lines
        TURTLE_flip

        # Increment counters for next iteration
        x 1 + AS x
        y 1 + AS y

        # Update color for the NEXT frame
        color 1 + 15 % 1 + AS color

        GOTO alternate_loop
    :end_loop
}


TURTLE_start


# Set a color
cyan TURTLE_color

db_sprite TURTLE_mode
# sprite TURTLE_mode
# db_pixel TURTLE_mode


star TURTLE_flip

IO 2 NEW
circle TURTLE_flip

IO 2 NEW
lines TURTLE_flip

io 2 NEW
draw_fan_pattern





