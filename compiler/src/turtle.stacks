INCLUDE turtle_lib
USE std_stern_io





def circle {
    # Draw a circle at (40, 30) with a radius of 20
    40 30 25 TURTLE_circle TURTLE_flip
    red TURTLE_color
    40 30 20 TURTLE_circle TURTLE_flip
    lightRed TURTLE_color
    40 30 15 TURTLE_circle TURTLE_flip
    green TURTLE_color
    40 30 10 TURTLE_circle TURTLE_flip
    purple TURTLE_color
    40 30 5 TURTLE_circle TURTLE_flip
    blue TURTLE_color
    40 30 2 TURTLE_circle TURTLE_flip
}

def lines {
    black TURTLE_color
    20 30 60 30 TURTLE_line
    # Loop for drawing lines outwards from the center
    1 AS i
    :line_loop1
        i 16 == IF GOTO end_loop1 END # Loop from 1 to 15

        # Set color (colors 1 to 15)
        i TURTLE_color

        # Draw line below center
        # y = 30 + i
        20 30 i + 59 30 i + TURTLE_line

        # Draw line above center
        # y = 30 - i
        20 30 i - 59 30 i - TURTLE_line

        i 1 + AS i
        TURTLE_flip
        GOTO line_loop1

    :end_loop1
}



DEF star {
    # Center of the screen
    VALUE center_x 40
    VALUE center_y 30

    # Draw 12 lines in a star burst pattern with different colors
    red TURTLE_color
    center_x center_y 70 30 TURTLE_line TURTLE_flip

    orange TURTLE_color
    center_x center_y 66 45 TURTLE_line TURTLE_flip

    yellow TURTLE_color
    center_x center_y 55 56 TURTLE_line TURTLE_flip

    lightGreen TURTLE_color
    center_x center_y 40 58 TURTLE_line TURTLE_flip# Adjusted to 59 to be on screen

    green TURTLE_color
    center_x center_y 25 56 TURTLE_line TURTLE_flip

    cyan TURTLE_color
    center_x center_y 14 45 TURTLE_line TURTLE_flip

    lightBlue TURTLE_color
    center_x center_y 10 30 TURTLE_line TURTLE_flip

    blue TURTLE_color
    center_x center_y 14 15 TURTLE_line TURTLE_flip

    purple TURTLE_color
    center_x center_y 25 4 TURTLE_line TURTLE_flip

